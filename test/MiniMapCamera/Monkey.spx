var (
	movnum int
)
onClick => {
	animate "clap"
}

onKey KeySpace, => {
	println width, height
	animate "think"
}

onKey KeyC, => {
	turn 45
}

onKey KeyE, => {
	step 5
	println distanceStepTo("Crocodile")
}
onKey KeyF, => {
	step 5, "animstep"
	println distanceStepTo("Crocodile")
}
onKey KeyG, => {
	step -5, "slowstep"
	println distanceStepTo("Crocodile")
}

onMoving mi => {
	Game.CameraMove mi.Dx(), mi.Dy()
}

onTurning ti=> {
	Crocodile.SetHeading ti.newDir
}
