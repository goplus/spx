var life int

onMsg "battle", => {
	for {
		wait 1
		clone
	}
}

onCloned => {
	life = 1
	setCostume 0
	setXYpos rand(-131, 131), 237
	show
	for {
		changeYpos -8
		if ypos < -170 {
			destroy
		}
		if touching("Bullet") {
			life--
			if life == 0 {
				addScore 5
				die
			}
		}
		wait 0.05
	}
}

onMsg "kill all", => {
	addScore 5
	die
}
