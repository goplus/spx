var life int

onMsg "battle", => {
	for {
		wait 25
		clone
	}
}

onCloned => {
	life = 50
	setCostume 0
	setXYpos rand(-110, 110), 237
	show
	for {
		changeYpos -2
		if ypos < -200 {
			destroy
		}
		if touching("Bullet") {
			life--
			if life == 0 {
				addScore 50
				die
			}
		}
		wait 0.05
	}
}

onMsg "kill all", => {
	addScore 50
	die
}
