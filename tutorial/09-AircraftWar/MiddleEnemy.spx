var life int

onMsg "battle", => {
	for {
		wait 2
		clone
	}
}

onCloned => {
	life = 8
	setCostume 0
	setXYpos rand(-131, 131), 237
	show
	for {
		changeYpos -5
		if ypos < -170 {
			destroy
		}
		if touching("Bullet") {
			life--
			if life == 0 {
				addScore 10
				die
			}
		}
		wait 0.05
	}
}

onMsg "kill all", => {
	addScore 10
	die
}
